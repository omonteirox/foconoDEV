<%- include('./partials/header.ejs'); %>

    <body class="xd">
        <%- include('./partials/navbar.ejs'); %>
            <div class="container">
                <hr>
                <h1 class="center">Te perguntaram isso:</h1>
                <p class="display-6">
                    <%=question.title%>
                </p>
                <h1 class="center">E a descrição da pergunta é essa:</h1>
                <p class="display-6">
                    <%=question.description%>
                </p>
                <hr>
                <form method="post" action="/answer">
                    <h3>Responda:</h3>
                    <textarea placeholder="Digite sua Resposta" class="form-control" name="body" id=""></textarea>
                    <br>
                    <input type="hidden" name="question" value="<%=question.id%>">
                    <button type="submit" class="btn btn-dark">Enviar Resposta</button>
                </form>
                <hr>
                <h3>Suas Respostas:</h3>
                <hr>
                <% answers.forEach((answer) =>{ %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <p>
                                <%= answer.body%>
                            </p>
                        </div>
                    </div>
                <%})%>
            </div>
    </body>
    <%- include('./partials/footer.ejs'); %>